<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/adBlockerImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ad_blocker" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/adBlockerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ad Blocker"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/adBlockerDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blocks most ads on web pages" />
            </LinearLayout>
            <Switch
                android:id="@+id/adBlockerEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/videoEnhancerImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/video_enhancer" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/videoEnhancerTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video Enhancer"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/videoEnhancerdescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Enhance your Video browsing \n experience on sites like \n youtube.com" />
                </LinearLayout>
                <Switch
                    android:id="@+id/videoEnhancerEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:id="@+id/videoEnhancerInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/videoEnhancerReloadImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/video_enhancer_reload"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/readAloudImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/read_aloud" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/readAloudTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Read Aloud"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/readAloudDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Description" />
            </LinearLayout>
            <Switch
                android:id="@+id/readAloudEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
